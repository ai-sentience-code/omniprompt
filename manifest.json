{
    "manifest_version": 3,
    "name": "LLM Multi-Submitter",
    "version": "1.0",
    "permissions": [
      "storage",
      "scripting",
      "tabs",
      "windows"
    ],
    "host_permissions": [
      "https://*.claude.ai/*",
      "https://*.chatgpt.com/*",
      "https://chatgpt.com/*",
      "https://aistudio.google.com/prompts*",
      "https://x.com/i/grok*",
      "https://chat.deepseek.com/*"
    ],
    "action": {
      "default_title": "LLM Multi-Submitter"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  